<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BuscaMarvel">


    <FrameLayout
        android:id="@+id/frameHeaderBusca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtNomePersonagem">

        <TextView
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/busca"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D43026"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameHeaderMarvel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/frameHeaderBusca"
        app:layout_constraintStart_toEndOf="@id/frameHeaderBusca">

        <TextView
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/marvel"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D43026"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameHeaderTeste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/frameHeaderBusca"
        app:layout_constraintStart_toEndOf="@id/frameHeaderMarvel">

        <TextView
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTE FRONT-END"
            android:textSize="16sp"
            android:textColor="#D43026"/>
    </FrameLayout>


    <TextView
        android:id="@+id/txtNomePersonagem"
        android:textColor="#D43026"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frameHeaderBusca"
        android:layout_marginTop="12px"
        app:layout_constraintBottom_toTopOf="@id/txtFieldPersonagem"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nome do Personagem"
        android:layout_marginStart="40dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtFieldPersonagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtNomePersonagem"
        android:layout_marginBottom="12px"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:boxBackgroundColor="@color/white"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <FrameLayout
        android:id="@+id/FrameBarraVermelha"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtFieldPersonagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20px"
        app:layout_constraintBottom_toTopOf="@id/recycleDadosHeroi"
        android:background="#D43026">

        <TextView
            android:id="@+id/txtBarraVermelha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nome"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="@id/FrameBarraVermelha"
            app:layout_constraintBottom_toBottomOf="@id/FrameBarraVermelha"
            app:layout_constraintTop_toTopOf="@id/FrameBarraVermelha"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleDadosHeroi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/FrameBarraVermelha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>